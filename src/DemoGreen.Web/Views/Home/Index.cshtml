@{
    ViewData["Title"] = "Home Page";
}

<div class="card border-success mb-3">
    <div class="card-header bg-success text-white">Welcome</div>
    <div class="card-body text-primary">
        <form>
            <div class="form-group row mb-0">
                <label class="col-sm-4 col-form-label-sm" for="machineName">Machine</label>
                <div class="col-sm-8">
                    <input class="form-control-plaintext form-control-sm" id="machineName" type="text" value="@Environment.MachineName" />
                </div>
            </div>
            <div class="form-group row mb-0">
                <label class="col-sm-4 col-form-label-sm" for="osVersion">OS Version</label>
                <div class="col-sm-8">
                    <input class="form-control-plaintext form-control-sm" id="osVersion" type="text" value="@Environment.OSVersion" />
                </div>
            </div>
            <div class="form-group row mb-0">
                <label class="col-sm-4 col-form-label-sm" for="processorCount">Processor</label>
                <div class="col-sm-8">
                    <input class="form-control-plaintext form-control-sm" id="processorCount" type="text" value="@Environment.ProcessorCount" />
                </div>
            </div>
            <div class="form-group row mb-0">
                <label class="col-sm-4 col-form-label-sm" for="currentDirectory">CurrentDirectory</label>
                <div class="col-sm-8">
                    <input class="form-control-plaintext form-control-sm" id="currentDirectory" type="text" value="@Environment.CurrentDirectory" />
                </div>
            </div>
        </form>
    </div>
</div>